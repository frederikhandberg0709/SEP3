<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="via.sep.gui.View.CreateAgentView">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create New Agent" style="-fx-font-size: 24;"/>

    <GridPane vgap="10" hgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Contact Info:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="contactInfoField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel"/>
        <Button fx:id="createButton" text="Create Agent" defaultButton="true"/>
    </HBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>
