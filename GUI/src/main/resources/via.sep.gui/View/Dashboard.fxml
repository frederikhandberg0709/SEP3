<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="421.0" prefWidth="699.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="via.sep.gui.View.DashboardView">
    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <!-- Header -->
        <HBox alignment="CENTER" spacing="10">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Real Estate Manager">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Text>
        </HBox>

        <!-- Action Buttons and Search -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="createPropertyButton" mnemonicParsing="false" onAction="#handleCreateProperty"
                    styleClass="action-button" text="Create Property">
                <tooltip>
                    <Tooltip text="Create a new property listing" />
                </tooltip>
            </Button>
            <Button fx:id="editPropertyButton" mnemonicParsing="false" onAction="#handleEditProperty"
                    styleClass="action-button" text="Edit Property">
                <tooltip>
                    <Tooltip text="Edit selected property" />
                </tooltip>
            </Button>
            <Button fx:id="deletePropertyButton" mnemonicParsing="false" onAction="#handleDeleteProperty"
                    styleClass="action-button" text="Delete Property">
                <tooltip>
                    <Tooltip text="Delete selected property" />
                </tooltip>
            </Button>
            <Button fx:id="bookingListButton" mnemonicParsing="false" onAction="#handleBookingList"
                    styleClass="action-button" text="Booking List">
                <tooltip>
                    <Tooltip text="View property bookings" />
                </tooltip>
            </Button>
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh"
                    styleClass="action-button" text="Refresh">
                <tooltip>
                    <Tooltip text="Refresh property list" />
                </tooltip>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" prefWidth="250" promptText="Search properties...">
                <tooltip>
                    <Tooltip text="Search by address, type, or price" />
                </tooltip>
            </TextField>
        </HBox>

        <!-- Property Table -->
        <TableView fx:id="propertyTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="addressColumn" prefWidth="150" text="Address" />
                <TableColumn fx:id="propertyTypeColumn" prefWidth="100" text="Type" />
                <TableColumn fx:id="priceColumn" prefWidth="100" text="Price" />
                <TableColumn fx:id="bedroomsColumn" prefWidth="80" text="Bedrooms" />
                <TableColumn fx:id="bathroomsColumn" prefWidth="80" text="Bathrooms" />
                <TableColumn fx:id="floorAreaColumn" prefWidth="100" text="Floor Area" />
                <TableColumn fx:id="yearBuiltColumn" prefWidth="80" text="Year Built" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200" text="Description" />
            </columns>
            <placeholder>
                <Label text="No properties found" />
            </placeholder>
        </TableView>

        <!-- Status Bar -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="statusLabel" styleClass="status-label" />
        </HBox>
    </VBox>
</AnchorPane>
