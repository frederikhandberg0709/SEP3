<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="916.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="via.sep.gui.View.EditPropertyView">
   <children>
      <VBox spacing="15" padding="20">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Edit Property">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
         </Text>

         <!-- Basic Property Information -->
         <Label text="Address" style="-fx-font-weight: bold" />
         <TextField fx:id="addressField" promptText="Enter property address" />

         <Label text="Property Type" style="-fx-font-weight: bold" />
         <ComboBox fx:id="propertyTypeField" prefWidth="620.0">
            <items>
               <FXCollections fx:factory="observableArrayList">
                  <String fx:value="House" />
                  <String fx:value="Apartment" />
               </FXCollections>
            </items>
         </ComboBox>

         <Label text="Number of Bedrooms" style="-fx-font-weight: bold" />
         <TextField fx:id="numBedroomsField" promptText="Enter number of bedrooms" />

         <Label text="Number of Bathrooms" style="-fx-font-weight: bold" />
         <TextField fx:id="numBathroomsField" promptText="Enter number of bathrooms" />

         <Label text="Number of Floors" style="-fx-font-weight: bold" />
         <TextField fx:id="numFloorsField" promptText="Enter number of floors" />

         <Label text="Floor Area (sq m)" style="-fx-font-weight: bold" />
         <TextField fx:id="floorAreaField" promptText="Enter floor area" />

         <Label text="Year Built" style="-fx-font-weight: bold" />
         <TextField fx:id="yearBuiltField" promptText="Enter year built" />

         <Label text="Price ($)" style="-fx-font-weight: bold" />
         <TextField fx:id="priceField" promptText="Enter price" />

         <Label text="Description" style="-fx-font-weight: bold" />
         <TextArea fx:id="descriptionField" prefHeight="60.0" promptText="Enter property description" wrapText="true" />

         <!-- House-specific fields -->
         <VBox fx:id="houseFields" spacing="10" visible="false">
            <Label text="House-specific Details" style="-fx-font-weight: bold" />
            <TextField fx:id="lotSizeField" promptText="Enter lot size (sq m)" />
            <CheckBox fx:id="hasGarageField" text="Has Garage" />
         </VBox>

         <!-- Apartment-specific fields -->
         <VBox fx:id="apartmentFields" spacing="10" visible="false">
            <Label text="Apartment-specific Details" style="-fx-font-weight: bold" />
            <TextField fx:id="floorNumberField" promptText="Enter floor number" />
            <TextField fx:id="buildingNameField" promptText="Enter building name" />
            <CheckBox fx:id="hasElevatorField" text="Has Elevator" />
            <CheckBox fx:id="hasBalconyField" text="Has Balcony" />
         </VBox>

         <!-- Error message -->
         <Label fx:id="errorLabel" textFill="RED" wrapText="true" />

         <!-- Buttons -->
         <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="cancelButton" text="Cancel" prefWidth="100" />
            <Button fx:id="applyChangesButton" text="Save Changes" prefWidth="120" defaultButton="true" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
